<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123456"
    android:padding="30dp"
    tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#67bdcc"
            android:textAlignment="center"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/xValue"
                    android:layout_width="100dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/yValue"
                    android:textColor="#000"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/zValue"
                    android:textColor="#000"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLayout"
            android:layout_marginTop="20dp"
            android:background="#67bdcc"
            android:textAlignment="center"
            android:layout_below="@+id/firstLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/xGyroValue"
                    android:layout_width="100dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/yGyroValue"
                    android:textColor="#000"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/zGyroValue"
                    android:textColor="#000"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLayout"
            android:layout_below="@+id/secondLayout"
            android:layout_marginTop="20dp"
            android:background="#67bdcc"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/xMagnoValue"
                    android:layout_width="100dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/yMagnoValue"
                    android:layout_width="100dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/zMagnoValue"
                    android:layout_width="100dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forthLayout"
            android:layout_below="@+id/thirdLayout"
            android:layout_marginTop="20dp"
            android:background="#67bdcc"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/light"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/pressure"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/temperature"
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

</RelativeLayout>